    "lint:syntax": "eslint . --ext .ts,.tsx --quiet",
    "lint": "npm run lint:syntax && npm run lint:ts",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
